{
  "name": "@skills-guard/server",
  "version": "0.2.1",
  "description": "Skills Guard REST API Server - HTTP API Service for Agent Skills Security",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "skills-guard-server": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts --clean",
    "dev": "tsx watch src/cli.ts",
    "start": "node dist/cli.js",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "skills-guard",
    "agent-skills",
    "security",
    "api",
    "rest",
    "server"
  ],
  "author": "Skills Guard Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/skills-guard/skills-guard.git",
    "directory": "packages/server"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@skills-guard/core": "workspace:*",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "supertest": "^6.3.4",
    "@types/supertest": "^6.0.2"
  }
}
